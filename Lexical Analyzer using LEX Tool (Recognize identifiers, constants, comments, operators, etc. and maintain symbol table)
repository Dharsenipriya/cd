%{
#include <stdio.h>
#include <string.h>

int count = 0;
char symbol[50][20];

void addSymbol(char *s) {
    for (int i = 0; i < count; i++)
        if (strcmp(symbol[i], s) == 0)
            return;
    strcpy(symbol[count++], s);
}
%}

%%
[a-zA-Z_][a-zA-Z0-9_]*      { printf("Identifier: %s\n", yytext); addSymbol(yytext); }
[0-9]+                      { printf("Constant: %s\n", yytext); }
"/*"([^*]|\*+[^*/])*\*+"/"  { printf("Comment: %s\n", yytext); }
"//".*                      { printf("Comment: %s\n", yytext); }
[+\-*/=<>!&|]               { printf("Operator: %s\n", yytext); }
[\n\t ]+                    ;  /* ignore spaces */
.                           { printf("Other: %s\n", yytext); }
%%

int main() {
    yylex();
    printf("\nSymbol Table:\n");
    for (int i = 0; i < count; i++)
        printf("%s\n", symbol[i]);
    return 0;
}
------------
How to run
lex lexanalyzer.l
gcc lex.yy.c -o lexanalyzer
./lexanalyzer < input.c
